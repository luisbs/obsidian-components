{
  "private": true,
  "name": "obsidian-fragments",
  "version": "0.1.0",
  "license": "MIT",
  "description": "Plugin to use template fragments on render time",
  "keywords": [
    "obsidian",
    "template"
  ],
  "author": {
    "name": "Luis Brayan",
    "url": "https://github.com/luisbs"
  },
  "main": "dist/main.js",
  "scripts": {
    "build": "run-s build:package build:version",
    "build:package": "node esbuild.config.mjs --environment production",
    "build:version": "node version-bump.mjs && git add manifest.json versions.json",
    "watch:ts": "node esbuild.config.mjs",
    "lint": "run-s lint:eslint:fix lint:prettier:fix lint:ts",
    "lint:eslint": "eslint --ext .ts,.js ./src",
    "lint:eslint:fix": "eslint --fix --ext .ts,.js ./src",
    "lint:prettier": "prettier --check \"./src/**/*.(ts|js)\"",
    "lint:prettier:fix": "prettier --write \"./src/**/*.(ts|js)\"",
    "lint:ts": "tsc -noEmit -skipLibCheck",
    "test": "run-p test:lint",
    "test:lint": "run-p lint:eslint lint:prettier lint:ts"
  },
  "devDependencies": {
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "builtin-modules": "^3.3.0",
    "esbuild": "^0.14.0",
    "esbuild-plugin-copy": "^1.3.0",
    "eslint": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "obsidian": "latest",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4"
  }
}
